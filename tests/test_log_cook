# and conditions of the GNU General Public License version 2.

. ep.sh
ep_suite_init "$@"

declare -a STATUS_LIST=(
                SKIPPED
                PASSED
                WAIVED
                FAILED 
                ERRORED
                PANICKED
                ABORTED
)


# Execute a cooked log comparison test
# Args: name
# Input: input (original) and expected output (cooked) logs, separated by
#        a '-' on a line by itself, will have leading space removed from every
#        line
function t()
{
    declare -r name="$1"
    declare -r input_and_expected_output=`sed -e 's/^\s\+//'`
    declare -r input=`echo -n "\$input_and_expected_output" |
                        sed -ne '/^-$/q; p'`
    declare -r expected_output=`echo -n "\$input_and_expected_output" |
                                sed -ne 'x; /^-$/{x;p;x}; x; /^-$/x'`

    ep_test_begin "$name"; (
        ep_test_init
        declare result=0
        declare status=0
        declare output
        output=`echo -n "$input" | ep_log_cook` || status=$?
        if [ "$output" != "$expected_output" ]; then
            echo "====== INPUT ======"
            echo "$input"
            echo "= EXPECTED OUTPUT ="
            echo "$expected_output"
            echo "== RESULT OUTPUT =="
            echo "$output"
            echo "==================="
            echo "Unexpected output"
            result=1
        fi
        if [ $status != 0 ]; then
            echo "Unexpected exit status: $status"
            result=1
        fi
        exit $result
    ); ep_test_end
}

t empty <<<"\
    -"

t begin <<<"\
    STRUCT BEGIN ''
    -"

t begin_end <<<"\
    STRUCT BEGIN '/t'
    STRUCT END '/t' PASSED
    -
    /t PASSED"

t unconcluded <<<"\
    STRUCT BEGIN '/1'
    STRUCT END '/1' SKIPPED
    STRUCT BEGIN '/2'
    STRUCT END '/2' PASSED
    -
    /1 SKIPPED
    /2 PASSED
    PASSED?"

t unconcluded_unended <<<"\
    STRUCT BEGIN '/1'
    STRUCT END '/1' SKIPPED
    STRUCT BEGIN '/2'
    -
    /1 SKIPPED
    SKIPPED?"

t concluded <<<"\
    STRUCT BEGIN ''
    STRUCT BEGIN '/1'
    STRUCT END '/1' SKIPPED
    STRUCT BEGIN '/2'
    STRUCT END '/2' PASSED
    STRUCT END '' PASSED
    -
    /1 SKIPPED
    /2 PASSED
    PASSED"

t concluded_unended <<<"\
    STRUCT BEGIN ''
    STRUCT BEGIN '/1'
    STRUCT END '/1' SKIPPED
    STRUCT BEGIN '/2'
    STRUCT END '/2' PASSED
    -
    /1 SKIPPED
    /2 PASSED
    PASSED?"

t end_reason <<<"\
    STRUCT BEGIN '/1'
    STRUCT END '/1' FAILED Bug 12345
    -
    /1 FAILED Bug 12345"

t output_reason <<<"\
    STRUCT BEGIN '/1'
    OUTPUT Segmentation fault
    STRUCT END '/1' FAILED
    -
    /1 FAILED \"Segmentation fault\""

t parent_override <<<"\
    STRUCT BEGIN ''
    STRUCT BEGIN '/1'
    STRUCT BEGIN '/2'
    STRUCT END '/2' FAILED
    STRUCT END '/1' WAIVED
    STRUCT END '' WAIVED
    -
    /2 FAILED
    /1 WAIVED
    WAIVED"

ep_suite_begin status; (
    ep_suite_init
    for s in "${STATUS_LIST[@]}"; do
        t "$s" <<<"\
            STRUCT BEGIN ''
            STRUCT END '' $s
            -
            $s"
    done
); ep_suite_end
